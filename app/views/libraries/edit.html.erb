<!-- 図書館編集画面 -->
<div class="container mx-auto max-w-7xl px-4 text-center mt-20">
  <div style="margin-bottom: 60px;"></div>
  <%= form_with(model: @library, local: true, class: "mx-auto max-w-md") do |form| %>
    <h1 class="text-xl font-semibold mb-12 text-gray-600"><i class="fa-solid fa-pen-fancy"></i> <%= @library.name %> の情報を編集</h1>

    <div class="mb-4"></div>

    <% if @library.errors.any? %>
      <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4" role="alert">
        <strong class="font-bold">エラーが発生しました</strong>
        <span class="block sm:inline"><%= pluralize(@library.errors.count, "件のエラー") %>。</span>
        <ul class="list-disc list-inside">
          <% @library.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="border rounded-lg p-6 hover:bg-gray-100 mx-auto">
      <!-- 図書館名 -->
      <div class="mb-6">
        <div class="bg-gray-100 p-2 rounded text-center mb-2">図書館名</div>
        <%= form.text_field :name, class: "shadow appearance-none border rounded py-2 px-3 w-full text-gray-700 leading-tight focus:outline-none focus:shadow-outline text-center" %>
      </div>

      <!-- 都道府県 -->
      <div class="mb-6">
        <div class="bg-gray-100 p-2 rounded text-center mb-2">都道府県</div>
        <%= form.select :prefecture, prefectures_for_select, {}, class: "shadow appearance-none border rounded py-2 px-3 w-full text-gray-700 leading-tight focus:outline-none focus:shadow-outline text-center" %>
      </div>

      <!-- 自習室の有無 -->
      <div class="mb-6">
        <div class="bg-gray-100 p-2 rounded text-center mb-2">自習室の有無</div>
        <%= form.select :study_rooms, { 'あり': 1, 'なし': 0 }, {}, class: "shadow appearance-none border rounded py-2 px-3 w-full text-gray-700 leading-tight focus:outline-none focus:shadow-outline text-center" %>
      </div>

      <!-- 休館日 -->
      <div class="mb-6">
        <div class="bg-gray-100 p-2 rounded text-center mb-2">休館日</div>
        <%= form.text_field :holiday, class: "shadow appearance-none border rounded py-2 px-3 w-full text-gray-700 leading-tight focus:outline-none focus:shadow-outline text-center" %>
      </div>

      <!-- 画像アップロード -->
      <div class="mb-6">
        <div class="bg-gray-100 p-2 rounded text-center mb-2">画像</div>
        <%= form.file_field :img, class: "shadow appearance-none border rounded py-2 px-3 w-full text-gray-700 leading-tight focus:outline-none focus:shadow-outline text-center" %>
      </div>

      <!-- 座席数 -->
      <div class="mb-6">
        <div class="bg-gray-100 p-2 rounded text-center mb-2">座席数</div>
        <%= form.select :seats_number, Library.seats_numbers.keys.map { |key| [I18n.t("enums.library.seats_number.#{key}"), key] }, {}, class: "shadow appearance-none border rounded py-2 px-3 w-full text-gray-700 leading-tight focus:outline-none focus:shadow-outline text-center" %>
      </div>

      <!-- PC利用可能 -->
      <div class="mb-6">
        <div class="bg-gray-100 p-2 rounded text-center mb-2">PC利用可能</div>
        <%= form.select :pc_available, Library.pc_availables.keys.map { |key| [I18n.t("enums.library.pc_available.#{key}"), key] }, {}, class: "shadow appearance-none border rounded py-2 px-3 w-full text-gray-700 leading-tight focus:outline-none focus:shadow-outline text-center" %>
      </div>

      <!-- WiFi利用可能 -->
      <div class="mb-6">
        <div class="bg-gray-100 p-2 rounded text-center mb-2">WiFi利用可能</div>
        <%= form.select :wifi_available, Library.wifi_availables.keys.map { |key| [I18n.t("enums.library.wifi_available.#{key}"), key] }, {}, class: "shadow appearance-none border rounded py-2 px-3 w-full text-gray-700 leading-tight focus:outline-none focus:shadow-outline text-center" %>
      </div>

      <!-- 電源の有無 -->
      <div class="mb-6">
        <div class="bg-gray-100 p-2 rounded text-center mb-2">電源利用可能</div>
        <%= form.select :power_available, Library.power_availables.keys.map { |key| [I18n.t("enums.library.power_available.#{key}"), key] }, {}, class: "shadow appearance-none border rounded py-2 px-3 w-full text-gray-700 leading-tight focus:outline-none focus:shadow-outline text-center" %>
      </div>

      <!-- 備考 -->
      <div class="mb-6">
        <div class="bg-gray-100 p-2 rounded text-center mb-2">備考</div>
        <%= form.text_area :body, class: "shadow appearance-none border rounded py-2 px-3 w-full text-gray-700 leading-tight focus:outline-none focus:shadow-outline text-center" %>
      </div>
    </div>
    <!-- 保存ボタン -->
    <div class="text-center mt-8">
      <%= form.submit "この内容に変更する", class: "bg-gray-200 hover:bg-gray-400 text-black font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
    </div>
  <% end %>

  <hr class="my-8 border-gray-300 max-w-md mx-auto">

  <%= link_to 'javascript:history.back()', class: "bg-gray-100 hover:bg-gray-200 text-black font-bold py-1.5 px-3 rounded-full focus:outline-none focus:shadow-outline border-2 border-gray-300" do %>
    <i class="fa-solid fa-reply"></i> 前のページに戻る
  <% end %>

  <div style="margin-bottom: 100px;"></div>
</div>
