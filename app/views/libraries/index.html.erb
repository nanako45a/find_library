<!-- 図書館の一覧表示 -->
<div class="container mx-auto px-4">
  <h1 class="text-xl font-semibold mb-4">図書館一覧</h1>
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
    <% @libraries.each do |library| %>
      <div class="border rounded-lg p-4 hover:bg-gray-100">
        <h2 class="text-lg font-bold"><%= library.name %></h2>
        <p><%= library.prefecture %></p>
        <p>自習室数: <%= library.study_rooms %></p>
        <div class="mt-4">
          <%= link_to '詳細を見る', library_path(library), class: "text-blue-500 hover:text-blue-700" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
