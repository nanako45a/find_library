<h1 class="text-xl font-bold mb-4">新しい図書館を追加</h1>

<%= form_with(model: @library, local: true, class: "space-y-4") do |form| %>
  <% if @library.errors.any? %>
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative" role="alert">
      <strong class="font-bold">エラーが発生しました</strong>
      <span class="block sm:inline"><%= pluralize(@library.errors.count, "件のエラー") %>。</span>
      <ul class="list-disc list-inside">
        <% @library.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-4">
    <%= form.label :name, '図書館名', class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= form.text_field :name, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>

  <div class="mb-4">
    <%= form.label :prefecture, '都道府県', class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= form.select :prefecture, prefectures_for_select, {}, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>

  <div class="mb-4">
    <%= form.label :study_rooms, '自習室の有無', class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= form.select :study_rooms, { 'あり': 1, 'なし': 0 }, {}, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>

  <div class="mb-4">
    <%= form.label :holiday, '休館日', class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= form.text_field :holiday, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>

  <div class="mb-4">
    <%= form.label :body, '備考', class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= form.text_area :body, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>

  <!-- 位置情報実装時に追加 -->
  <!-- <div class="mb-4"> -->
  <!-- <%= form.label :latitude, '緯度', class: "block text-gray-700 text-sm font-bold mb-2" %> -->
  <!-- <%= form.text_field :latitude, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %> -->
  <!-- </div> -->

  <!-- <div class="mb-4"> -->
  <!-- <%= form.label :longitude, '経度', class: "block text-gray-700 text-sm font-bold mb-2" %> -->
  <!-- <%= form.text_field :longitude, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %> -->
  <!-- </div> -->

  <div class="flex items-center justify-between">
    <%= form.submit "保存", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
  </div>
<% end %>
