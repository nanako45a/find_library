<!-- 特定の図書館の詳細表示 -->
<div class="container mx-auto max-w-7xl px-4 text-center my-20">
  <div class="flex justify-center items-center mb-12">
    <h1 class="text-xl font-semibold text-gray-600 mr-4"><i class="fa-solid fa-house"></i> <%= @library.name %></h1>
    <!-- お気に入り登録、解除ボタン -->
    <!-- ログインしているかの確認 -->
    <% if current_user %>
      <!-- ログイン状態の場合 -->
      <!-- ユーザーが図書館をすでにお気に入り登録しているかの確認 -->
      <% bookmark = current_user.bookmarks.find_by(library_id: @library.id) %>
      <% if bookmark %>
        <%= link_to library_bookmark_path(@library, bookmark), data: { turbo_method: :delete }, class: "bg-transparent hover:bg-gray-200 text-black font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" do %>
          <i class="fa-solid fa-star text-yellow-500"></i>
        <% end %>
      <% else %>
        <%= link_to library_bookmarks_path(@library), data: { turbo_method: :post }, class: "bg-transparent hover:bg-gray-200 text-black font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" do %>
          <i class="fa-regular fa-star hover:text-yellow-500"></i> <!-- Tailwind CSSの場合 -->
        <% end %>
      <% end %>
    <% else %>
      <!-- ログアウト状態の場合はログインページへ遷移 -->
      <%= link_to login_path, class: "bg-transparent hover:bg-gray-200 text-black font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" do %>
        <i class="fa-regular fa-star"></i>
      <% end %>
    <% end %>
  </div>

  <!-- 投稿編集・削除ボタン（投稿者にのみ表示） -->
  <!-- ユーザーが投稿者であるかの確認 -->
  <% if current_user && current_user.id == @library.user_id %>
    <div class="text-center mb-12">
      <%= link_to '編集', edit_library_path(@library), class: "bg-gray-200 hover:bg-gray-400 text-black font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
      <%= link_to '削除', library_path(@library), data: { turbo_method: :delete }, class: "bg-gray-200 hover:bg-gray-400 text-black font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
    </div>
  <% end %>

  <div class="border rounded-lg p-6 hover:bg-gray-100 mx-auto">
    <div class="flex items-center justify-center mb-6">
      <div class="w-32 bg-gray-100 p-2 rounded text-center">都道府県</div>
      <div class="ml-8 text-center w-48"><%= @library.prefecture %></div>
    </div>

    <div class="flex items-center justify-center mb-6">
      <div class="w-32 bg-gray-100 p-2 rounded text-center">自習室</div>
      <div class="ml-8 text-center w-48"><%= @library.study_rooms.to_i > 0 ? 'あり' : 'なし' %></div>
    </div>

    <% if @library.img.present? %>
      <div class="flex justify-center mb-6">
        <div class="w-auto">
          <%= image_tag @library.img.url, class: "max-w-36 h-auto rounded mx-auto" %>
        </div>
      </div>
    <% else %>
      <div class="flex justify-center mb-6">
        <%= image_tag 'default_library1.webp', class: "max-w-36 h-auto rounded mx-auto" %>
      </div>
    <% end %>

    <div class="flex items-center justify-center mb-6">
      <div class="w-32 bg-gray-100 p-2 rounded text-center">休館日</div>
      <div class="ml-8 text-center w-48"><%= @library.holiday %></div>
    </div>

    <div class="flex items-center justify-center mb-6">
      <div class="w-32 bg-gray-100 p-2 rounded text-center">備考</div>
      <div class="ml-8 text-center w-48"><%= @library.body %></div>
    </div>

    <div class="flex items-center justify-center mb-6">
      <div class="w-32 bg-gray-100 p-2 rounded text-center">投稿日時</div>
      <div class="ml-8 text-center w-48"><%= @library.created_at.in_time_zone('Tokyo').strftime("%Y年%m月%d日 %H:%M") %></div>
    </div>

    <div class="flex items-center justify-center mb-6">
      <div class="w-32 bg-gray-100 p-2 rounded text-center">最終編集日時</div>
      <div class="ml-8 text-center w-48"><%= @library.updated_at.in_time_zone('Tokyo').strftime("%Y年%m月%d日 %H:%M") %></div>
    </div>

    <!-- 投稿者名とアバターの表示 -->
    <div class="flex items-center justify-center mb-6">
      <div class="w-32 bg-gray-100 p-2 rounded text-center">投稿者名</div>
      <div class="ml-8 w-48 flex items-center justify-center">
        <% if @library.user.avatar? %>
          <%= image_tag @library.user.avatar.url, class: "h-8 w-8 rounded-full mr-2" %>
        <% else %>
          <%= image_tag 'default_avatar.webp', class: "h-8 w-8 rounded-full mr-2" %>
        <% end %>
        <span class="text-center"><%= @library.user.name %></span>
      </div>
    </div>
  </div>

  <!-- 地図を表示 -->
    <div id="map" style="height: 600px;"></div>
    <script>
      function initMap() {
        const mapElement = document.getElementById('map');
        const mapOptions = {
          center: { lat: <%= @library.latitude %>, lng: <%= @library.longitude %> },
          zoom: 15
        };
        const map = new google.maps.Map(mapElement, mapOptions);
        new google.maps.Marker({
          position: {lat: <%= @library.latitude %>, lng: <%= @library.longitude %>}, 
          map: map,
          title: '<%= j @library.name %>'
        });
      }
    </script>
    <script async defer
      src="https://maps.googleapis.com/maps/api/js?key=<%= ENV['GOOGLE_MAPS_API_KEY'] %>&callback=initMap">
    </script>

  <div class="text-center mt-6">
    <%= link_to '他の図書館を探す', libraries_path, class: "bg-blue-100 hover:bg-blue-400 text-black font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
    <%= link_to 'マイページ', profile_path, class: "bg-blue-100 hover:bg-blue-400 text-black font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline ml-4" %>
  </div>