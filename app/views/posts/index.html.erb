<!-- 投稿一覧ページ -->
<div class="container mx-auto px-4">
  <h1 class="text-2xl font-bold mb-6">投稿一覧</h1>
  
  <% @posts.each do |post| %>
    <div class="mb-4 p-4 border border-gray-300 rounded-lg hover:bg-gray-100">
      <h2 class="text-xl font-semibold"><%= link_to post.title, post, class: "text-blue-600 hover:text-blue-800" %></h2>
      <p class="text-gray-700"><%= truncate(post.body, length: 100) %></p>
      <div class="mt-2">
        <%= link_to '詳細を見る', post, class: "text-sm text-blue-600 hover:text-blue-800" %>
      </div>
    </div>
  <% end %>
</div>
