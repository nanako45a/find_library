<!-- 新規投稿画面 -->
<div class="container mx-auto px-4 py-8">
  <h1 class="text-2xl font-bold mb-4">新規投稿</h1>

  <%= form_with(model: @post, local: true) do |form| %>
    <% if @post.errors.any? %>
      <div class="mb-6 p-4 border border-red-500 rounded bg-red-100">
        <h2 class="font-bold mb-2">以下のエラーが発生しました：</h2>
        <ul>
          <% @post.errors.full_messages.each do |message| %>
            <li class="text-red-600"><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="mb-4">
      <%= form.label :title, class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= form.text_field :title, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
    </div>

    <div class="mb-6">
      <%= form.label :body, class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= form.text_area :body, rows: 6, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
    </div>

    <div>
      <%= form.submit "投稿する", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
    </div>
  <% end %>
</div>
