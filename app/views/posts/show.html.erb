<!-- 投稿詳細画面 -->
<div class="container mx-auto px-4 py-8">
  <div class="mb-6">
    <h1 class="text-3xl font-bold mb-2"><%= @post.title %></h1>
    <p class="text-gray-700 mb-4"><%= @post.body %></p>
    <p class="text-sm text-gray-600">投稿日時: <%= @post.created_at.strftime("%Y年%m月%d日 %H:%M") %></p>
    <div class="flex mt-6">
      <%= link_to '編集', edit_post_path(@post), class: "text-white bg-blue-500 hover:bg-blue-700 font-medium py-2 px-4 rounded" %>
      <%= link_to '削除', @post, method: :delete, data: { confirm: '本当に削除しますか？' }, class: "text-white bg-red-500 hover:bg-red-700 ml-4 font-medium py-2 px-4 rounded" %>
      <%= link_to '一覧に戻る', posts_path, class: "text-blue-600 hover:text-blue-800 ml-4" %>
    </div>
  </div>
</div>

