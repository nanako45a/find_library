<div class="container mx-auto max-w-7xl px-4 text-center mt-20">
  <h1 class="text-xl font-semibold mb-12 text-gray-600">プロフィールを編集</h1>

  <%= form_with(model: @profile, local: true) do |form| %>
    <!-- エラーメッセージの表示（必要な場合） -->
    <% if @profile.errors.any? %>
      <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
        <strong>エラーが発生しました：</strong>
        <ul>
          <% @profile.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="border rounded-lg p-6 hover:bg-gray-100 mx-auto max-w-md">
      <!-- 名前の入力フィールド -->
      <div class="flex items-center justify-start mb-6">
        <div class="w-32 bg-gray-100 p-2 rounded">名前</div>
        <div class="ml-8">
          <%= form.text_field :name, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
        </div>
      </div>

      <!-- メールアドレスの入力フィールド -->
      <div class="flex items-center justify-start mb-6">
        <div class="w-32 bg-gray-100 p-2 rounded">メールアドレス</div>
        <div class="ml-8">
          <%= form.email_field :email, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
        </div>
      </div>

      <!-- アバター画像アップロードフィールド -->
      <div class="flex items-center justify-start mb-6">
        <div class="w-32 bg-gray-100 p-2 rounded">アバター</div>
        <div class="ml-8">
          <%= form.file_field :avatar, class: "shadow appearance-none border rounded py-2 px-4 w-full text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
        </div>
      </div>

      <!-- 更新ボタン -->
      <div class="text-center mt-2">
        <%= form.submit "更新", class: "bg-gray-200 hover:bg-gray-400 text-black font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
      </div>
    </div>

    <div class="text-center mt-6">
      <%= link_to 'マイページ', profile_path, class: "bg-blue-200 hover:bg-blue-400 text-black font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline ml-4" %>
      <%= link_to '図書館を探す', libraries_path, class: "bg-blue-200 hover:bg-blue-400 text-black font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline ml-4" %>
    </div>
  <% end %>
</div>
