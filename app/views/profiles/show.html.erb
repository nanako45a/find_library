<!-- ProfilesController によって設定された@userからプロフィール情報を取得 -->
<div class="container mx-auto p-4">
  <div class="flex flex-col items-center">
    <!-- アバター画像の表示部分は後で記載 -->

    <!-- プロフィール情報 -->
    <div class="text-center mt-4">
      <h1 class="text-xl font-semibold"><%= @user.name %></h1>
      <p class="text-gray-600"><%= @user.email %></p>
    </div>
  </div>

  <!-- 編集ボタン -->
  <div class="text-center mt-4">
    <%= link_to 'プロフィールを編集する', edit_profile_path, class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
  </div>
</div>
