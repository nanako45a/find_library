<div class="container mx-auto p-4">
  <div class="flex flex-col items-center">

    <!-- プロフィール情報タイトル -->
    <div class="text-center mt-4">
      <h1 class="text-xl font-bold mb-4">マイページ</h1>

      <div class="mb-2">
        <span class="font-semibold">名前: </span>
        <span class="text-xl"><%= @profile.name %></span>
      </div>
      <div>
        <span class="font-semibold">メールアドレス: </span>
        <span class="text-gray-600"><%= @user.email %></span>
      </div>
    </div>
  </div>

  <!-- 編集ボタン -->
  <div class="text-center mt-4">
    <%= link_to 'プロフィールを編集する', edit_profile_path, class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
  </div>
</div>
