<!-- 新規登録ページのタイトル -->
<div class="text-center mt-8 mb-4">
  <h1 class="text-xl font-bold">新規登録ページ</h1>
</div>

<!-- 新規会員登録用入力フォーム -->
<%= form_with model: @user, url: users_path, local: true, class: "max-w-lg mx-auto my-8" do |form| %>
  <!-- 名前入力フォーム -->
  <div class="mb-6">
    <%= form.label :name, "名前", class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= form.text_field :name, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>

  <!-- メールアドレス入力フォーム -->
  <div class="mb-6">
    <%= form.label :email, "メールアドレス", class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= form.email_field :email, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>

  <!-- パスワード入力フォーム -->
  <div class="mb-6">
    <%= form.label :password, "パスワード", class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= form.password_field :password, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 mb-3 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>

  <!-- パスワード確認入力フォーム -->
  <div class="mb-6">
    <%= form.label :password_confirmation, "パスワード確認", class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= form.password_field :password_confirmation, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 mb-3 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>

  <div class="flex items-center justify-between">
    <%= form.submit "登録", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
  </div>
<% end %>

<% if @user.errors.any? %>
  <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative" role="alert">
    <strong class="font-bold">エラー</strong>
    <span class="block sm:inline">以下のエラーを修正してください。</span>
    <ul class="list-disc list-inside">
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
